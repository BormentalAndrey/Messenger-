<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:keepScreenOn="true">

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_controller="false"
        app:resize_mode="fit"
        app:keep_content_on_player_reset="true" />

    <!-- Оверлей с кастомными контроллами -->
    <LinearLayout
        android:id="@+id/controls_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- Верхняя панель (заголовок) -->
        <LinearLayout
            android:id="@+id/top_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="start"
            android:background="#66000000">

            <TextView
                android:id="@+id/video_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Neon Video Player"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:shadowColor="#FF00FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="20" />
        </LinearLayout>

        <!-- Нижняя панель -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

            <LinearLayout
                android:id="@+id/bottom_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="#66000000">

                <ImageButton
                    android:id="@+id/btn_play_pause"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@null"
                    android:src="@drawable/exo_icon_play"
                    android:tint="#00FFFF"
                    android:contentDescription="Play/Pause" />

                <SeekBar
                    android:id="@+id/seek_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:max="1000"
                    android:progressTint="#00FFFF"
                    android:thumbTint="#FF00FF"
                    android:progressBackgroundTint="#33FFFFFF" />

                <TextView
                    android:id="@+id/current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:shadowColor="#00FFFF"
                    android:shadowRadius="10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:shadowColor="#00FFFF"
                    android:shadowRadius="10" />

                <ImageButton
                    android:id="@+id/btn_fullscreen"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="16dp"
                    android:background="@null"
                    android:src="@drawable/exo_icon_fullscreen_enter"
                    android:tint="#FF00FF"
                    android:contentDescription="Fullscreen" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
